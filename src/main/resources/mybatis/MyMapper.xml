<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.mapper.MyMapper">
    <!--查询指定学生信息-->
    <select id="getStudentInfo" resultType="com.example.demo.model.Student">
        select * from student where id=#{id}
    </select>

    <!--查询所有学生信息-->
    <select id="selectAll" resultType="com.example.demo.model.Student">
        select * from student
    </select>

    <sql id="Base_Column_List">
        ID, AGE, NAME
    </sql>

    <!--分页查询-->
    <select id="selectPage" resultType="com.example.demo.model.Student" parameterType="map">
        select
            <include refid="Base_Column_List" />
        from student
    </select>

    <!--添加学生信息-->
    <insert id="addStudent" parameterType="com.example.demo.model.Student">
        insert into student(id,age,name) values(#{id},#{age},#{name})
    </insert>

    <!--删除学生信息-->
    <delete id="deleteStudentById" parameterType="int">
        delete from student where id=#{id}
    </delete>

    <!--根据id修改学生信息-->
    <update id="modifyStudent" parameterType="com.example.demo.model.Student">
        update student
        <set>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="name != null">
                name = #{name}
            </if>
        </set>
        where id=#{id}
    </update>
</mapper>
